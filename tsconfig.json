{
  "compilerOptions": {
    "target": "es5",
    "lib": ["ES2017"],
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./",
    "strict": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": ["node", "jest"]
  }
}
